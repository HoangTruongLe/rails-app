
<h1>Login</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder:"Username"  %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", placeholder:"Password"  %>
  </div>

  <div class="actions">
    <%= f.submit "Log in", class: 'btn btn-primary btn-block btn-large' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>