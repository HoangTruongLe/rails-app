<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="header">
          <h4 class="title">Danh sách loại sản phẩm</h4>
          <p class="category">Bảng cung cấp danh sách loại sản phẩm</p>
        </div>
        <div class="content table-responsive table-full-width">
          <table class="table table-hover table-striped">
            <thead>
            <tr>
              <th>ID</th>
              <th>Tên</th>
              <th colspan="3">Chức Năng</th>
            </tr>
            </thead>
            <tbody>
            <% @types.each do |type| %>
                <tr>
                  <td><%= type.id %></td>
                  <td><%= type.name %></td>
                  <td>
                    <%= link_to type do %>
                        <i class="fa fa-eye" aria-hidden="true" class='text-default'></i>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to edit_type_path(type) do %>
                        <i class="fa fa-pencil-square-o" class='text-warning'aria-hidden="true"></i>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to type, method: :delete, data: { confirm: 'Are you sure?' } do %>
                        <i class="fa fa-times" aria-hidden="true" class="text-danger"></i>
                    <% end %>
                  </td>
                </tr>
            <% end %>
            </tbody>
          </table>
          <div class="col-md-12 actions">
          <%= link_to 'Thêm Loại', new_type_path, class:"btn btn-info btn-fill pull-right" %>
          </div>
          <div class="clearfix"></div>
        </div>
        
      </div>
    </div>
  </div>
</div>
