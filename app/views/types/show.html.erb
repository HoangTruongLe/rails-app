<div class="col-md-12">
  <div class="card">
    <div class="header">
      <h4 class="title">Thông Tin Loại</h4>
    </div>
    <div class="content">
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <%= label_tag 'Tên Loại' %><br>
            <p><%= @type.name %></p>
          </div>
        </div>
      </div>
      <%= link_to 'Sửa', edit_type_path(@type), class:"btn btn-info btn-fill pull-right", style:"margin-left: 10px" %>
      <%= link_to 'Thêm Loại', new_type_path, class:"btn btn-info btn-fill pull-right" %>
    <div class="clearfix"></div>
    </div>
  </div>
</div>
